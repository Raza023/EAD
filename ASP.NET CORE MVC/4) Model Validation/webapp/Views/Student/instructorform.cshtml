@model webapp.Models.Instructor

@{
    ViewData["Title"] = "Instructor Form";
}

<h1>@ViewData["Title"]</h1>

<h1 class="display-4 text-center">Welcome</h1>

<div asp-validation-summary="All"></div>                @*viewing model validation. *@
 @*<div asp-validation-summary="ModelOnly"></div>           //viewing model Error. *@
<div>
    <form method="post" action="/Student/instructorform">
        <label asp-for="Name"></label>
        <input asp-for="Name" id="name"/><br/>
        <span asp-validation-for="Name"></span><br/>                @*viewing model validation. *@
        
        <label asp-for="Subject"></label>
        <input asp-for="Subject" id="subject"/><br/>
        <span asp-validation-for="Subject"></span><br/>                @*viewing model validation. *@
        
        <input type="submit" value="Save Instructor">
    </form>
</div>

@if(Model !=null)
{
    <h1>Data you entered</h1>
    <p>Name: @Model.Name</p>
    <p>Subject: @Model.Subject</p>
}

<p>Click <a asp-controller="student" asp-action="instructordata">here</a> to view all instructors.</p>
